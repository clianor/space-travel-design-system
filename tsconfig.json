{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./build",
    "baseUrl": "./",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "paths": {
      "@space-travel-design-system/ui": ["./packages/ui/src"],
      "@space-travel-design-system/ui/*": ["./packages/ui/src/*"],
      "@space-travel-design-system/utils": ["./packages/utils/src"],
      "@space-travel-design-system/utils/*": ["./packages/utils/src/*"]
    }
  }
}
